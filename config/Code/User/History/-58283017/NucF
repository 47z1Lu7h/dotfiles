	kitty -c ~/.config/kitty/themes/47z1.conf

	# sleep
super + alt + y
	sudo systemctl suspend

	# Logout
super + shift + l
	 sudo systemctl restart systemd-logind 

	# l0Ck screen
super + l
	betterlockscreen -l

	# program launcher
super + a
	rofi -no-lazy-grab -show drun -modi drun -theme  ~/.config/rofi/config.rasi

	# make sxhkd reload its configuration files:
control + Escape
	pkill -USR1 -x sxhkd

	# finder
super + e
	dolphin

	# Google-Chrome  
super + alt + g 
	google-chrome-stable
	
	# firefox
super + alt + f
	firefox-esr

	# Burpsuite 
super + alt + b 
	burpsuite

	# Clipmenu
super + v 
	clipmenu -i -fn "DaddyTimeMono Nerd Font:size=14" -nb '#010308' -nf '#19CB00' -sb '#19CB00' -sf '#010308' -p "ó°¢š " -l "22" -b

	# Hide window
super + z
	~/.config/bspwm/scripts/hide

	# Powermenu
suoer + alt + p
	~/.config/rofi/powermenu/type-4/powermenu.sh

        # Color Picker
super + alt + c
