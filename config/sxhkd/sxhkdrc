# -----------  wm independent hotkeys ---------------------------------- 

	# terminal emulator
super + Return
	kitty -c ~/.config/kitty/themes/47z1.conf

	# program launcher
super + a
	rofi -no-lazy-grab -show drun -modi drun -theme  ~/.config/rofi/config.rasi

	# make sxhkd reload its configuration files:
control + Escape
	pkill -USR1 -x sxhkd

	# finder
super + e
	dolphin

	# Google-Chrome  
super + alt + g 
	google-chrome-stable
	
	# firefox
super + alt + f
	firefox-esr

	# Burpsuite 
super + alt + b 
	burpsuite

# -----------  bspwm hotkeys   ---------------------------------- 

	# quit/restart bspwm
super + shift + q
	bspc quit

super + shift + r
	bspc -wm -r

	# close 
super + Escape
	bspc node -c

	# kill
super + alt + Escape
	bspc node -k
	
	# alternate between the tiled and monocle layout
super + w
	bspc desktop -l next

	# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

	# swap the current node and the biggest window
super + g
	bspc node -s biggest.window


# -----------  state/flags ---------------------------------- 

	# set the window state
super + {d,shift + d,f,r}
	bspc node -t {floating,tiled,pseudo_tiled,fullscreen}

	# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}


# -----------  focus/swap ---------------------------------- 

	# focus the next/previous window in the current desktop
super + {_,shift + }d
	bspc node -f {next,prev}.local.!hidden.window

	# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

	# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

	# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

	# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

	# focus the older or newer node in the focus history
super + {x,s}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

	# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'


# -----------  resize ---------------------------------- 

	# Custom resize, contract a window by moving one of its side inward
super + alt {Left,Down,Up,Right}
      ${HOME}/.config/bspwm/scripts/bspwm_resize {west,south,north,east} 

	# move a floating window
super + alt + shift {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# ----------- Display brightnes  ---------------------------------- 

XF86MonBrightnessUp
    brightnessctl set +2%

XF86MonBrightnessDown
    brightnessctl set 2%-

XF86MonBrightness{Up,Down}
	backlight {+,-}5%

# -----------  Media Controls ---------------------------------- 

	# Raise volume
XF86AudioRaiseVolume
  pactl set-sink-volume @DEFAULT_SINK@ +4%
 
	# Lover volume
XF86AudioLowerVolume
  pactl set-sink-volume @DEFAULT_SINK@ -4%
 
	# Mute
XF86AudioMute
  pactl set-sink-mute @DEFAULT_SINK@ toggle
 
	# Play
XF86AudioPlay
    playerctl play-pause
 
	# Next
XF86AudioNext
    playerctl next
 
	# Previous
XF86AudioPrev
    playerctl previous
 
	# Stop
XF86AudioStop
    playerctl stop

# ----------- Polyb4r & m1Sc  ---------------------------------- 

super + alt + p
	sudo killall polybar

	super + ctrl + 1
	sudo killall polybar; polybar -q bottom -c ~/.config/polybar/themes/pentest.ini

super + ctrl + 2
	sudo killall polybar; polybar -q bottom -c ~/.config/polybar/themes/simple.ini

super + ctrl + 3
	sudo killall polybar; polybar -q right  -c ~/.config/polybar/themes/plasma.ini & disown; polybar -q left -c ~/.config/polybar/themes/plasma.ini

super + ctrl + 4
	sudo killall polybar; polybar -q bottom -c ~/.config/polybar/themes/47z1.ini

	# Lab htb
super + alt + v
	sudo openvpn ~/d35kT0p/h7B/vp3n3s/lab_47z1Lu7h.ovpn

	# Kill openOvpn
super + alt + k
	sudo killall openvpn

	# Color Picker
super + alt + c
	${HOME}/.config/bspwm/scripts/color_picker.sh
