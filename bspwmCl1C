function banner(){
echo -ne "\t\t\t${red}${bold}
 ▄█████  ██████ ██▓███  █     █░███▄ ▄███▓▄████▄  ██▓    ██▓▄████▄
▓██████▒██    ▒▓██░  ██▓█░ █ ░█▓██▒▀█▀ ██▒██▀ ▀█ ▓██▒   ▓██▒██▀ ▀█
█    ▄█░ ▓██▄  ▓██░ ██▓▒█░ █ ░█▓██    ▓██▒▓█    ▄▒██░   ▒██▒▓██
▒██░█▀   ▒   ██▒██▄█▓▒ ░█░ █ ░█▒██    ▒██▒▓▓▄ ▄██▒██░   ░██▒▓▓▄ ▄██▒
░▓█  ▀█▒█████▒▒██▒ ░  ░░██▒██▓▒██▒   ░██▒ ▓███▀ ░██████░██▒ ▓███▀ ░
░▒▓███▀▒ ▒▓▒ ▒ ▒▓▒░ ░  ░ ▓░▒ ▒ ░ ▒░   ░  ░ ░▒ ▒  ░ ▒░▓  ░▓ ░ ░▒ ▒░
░▒░  ░░ ${bold}${red}By ${cyan}47z!Lu7h${end}${bold}${red}${tandout} :)${red}  ░ ░ ░    ▒    ░ ░  ░      ░ ░    ░
 ░ ░		▒ ░	░	░	░${end}"
}

function ctrl_c(){
	tput cnorm
	echo -ne "\n\n\t\t${bold}${red}<|[${black}!${red}]|> ${cyan}Ctrl+C ${black}--->${red}Exiting${cyan}!! ${red}\n\n\n"
	sudo rm -rf $cwd/r\* 2>/dev/null && exit 1
	tput civis
}

	# --> Fonts, Zsh stuff & cp dotfiles
function main(){
	tput cnorm

		# -->  Fonts
	echo -ne "\n\t${bold}${cyan}<|[+]|>>> ${end}${blue}Getting fonts & Icons ${cyan}--> \n\n"
	fonts_dir="/usr/share/fonts"
	for font in "${fonts[@]}"; do
		zip_file="${font}.zip"
		download_url="https://github.com/ryanoasis/nerd-fonts/releases/download/v3.0.0/${zip_file}"
		echo -ne "\n\t\t${red}D@Wnl@4D1n6${white}!! ${purple}~~>\n\n\t ${blue}$download_url\n\n${cyan}"
		wget "$download_url"
		sudo unzip -o "$zip_file" -d "$fonts_dir" && rm "$zip_file"
	done
	sudo find "$fonts_dir" -name '*Windows Compatible*' -delete && fc-cache -fv &&
		# -->  Icons
	wget "https://github.com/EliverLara/candy-icons/archive/refs/heads/master.zip" -O candy-icons.zip &&
	unzip -o candy-icons.zip -d  $HOME/.local/share/icons && rm -rf icons.zip
	if [ $? -eq 0 ]; then
		echo -ne "\n\t\t${bold}${red} ~!~!~!~  ${yellow}Fonts & icons done!   ${red}~!~!~!~\n\n\n" && sleep 1
			# -->  Zsh plugins
		echo -ne "\n\n\t${bold}${cyan}<|[+]|> ${end}${blue}Cloning zsh plugins ${cyan} -->\n\n\n"
		sleep 1 && rm -rf ~/.zsh && mkdir -p ~/.zsh/plugins && git clone --depth=1 "https://github.com/marlonrichert/zsh-autocomplete.git" ~/.zsh/plugins/zsh-autocomplete
		if [ $? -eq 0 ]; then
			wget "https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/plugins/sudo/sudo.plugin.zsh" -P ~/.zsh/plugins/sudo.plugin.zsh
			if [ $? -eq 0 ]; then
				curl -L git.io/antigen > ~/.zsh/antigen.zsh
				if [ $? -eq 0 ]; then
					echo -ne "\n${bold}${red}>> ${yellow}All Plugins done${red}!!!\n\n" &&
					sleep 1 && echo -ne "\n\t${bold}${cyan}<|[+]|> ${end}${blue}Coping home config files ${cyan}\n\n" &&
					cp -r $cwd/config/* $HOME/.config/ && cp -r $cwd/misc/home/.*?  $HOME && sudo sed -i "s/bash/zsh/g" /etc/passwd && sudo cp -r $HOME/.zsh /root && sudo ln -s -f $HOME/.zshrc /root && sudo ln -s -f $HOME/.p10k.zsh /root
					if [ $? -eq 0 ]; then
						sleep 1 && echo -ne "\n\n\t\t${bold}${red}<|[~]|> ${red}${yellow}Dotfiles done${red}!!! ${cyan}:D  ${bold}${red}<|[~]|>\n\n\n" && sleep 1
					else
						echo -e "\n\n\t\t${bold}${red}<|[!]|> ${black} Something went bad coping files ${red}${standout}: /${end}\n\n\n" && sleep 1 && exit 1
					fi
				else
					echo -e "\n\n\t\t${bold}${red}<|[!]|> ${black} Something went wrong getting antigen ${red}${standout}: /${end}\n\n\n" && sleep 1 && exit 1
				fi
			else
				echo -e "\n\n\t\t${bold}${red}<|[!]|> ${black} Something went wrong getting sudo.plugin ${red}${standout}: /${end}\n\n\n" && sleep 1 && exit 1
			fi
		else
			echo -e "\n\n\t\t${bold}${red}<|[!]|> ${black} Something went wrong getting zsh-autocomplete ${red}${standout}: /${end}\n\n\n" && sleep 1 && exit 1
		fi
	else
		echo -e "\n\n\t\t${bold}${red}<|[!]|> ${black} Something went wrong downloading Iosevka font ${red}${standout} :/${end}\n\n\n" && sleep 1 && exit 1
	fi

	tput civis
}

function code() {
	tput cnorm

	which code
	if [ $? -eq 0 ]; then
		echo -ne "\t${bold}${cyan}<|[${red}!${cyan}]|> ${end}${yellow}Code already in the system ${bold}${cyan}^${bold}${red}.${bold}${cyan}^${end}${cyan}\n\n" && sleep 1
	else

		if cat /etc/*release | grep "^ID_LIKE" | grep -Ei "Debian" > /dev/null; then

			echo -ne "\n\t${bold}${cyan}<|[+]|> ${blue}Installing VS Code ${end}${cyan}--> \n\n"
			sleep 1
			sudo apt-get install wget gpg && wget -qO- "https://packages.microsoft.com/keys/microsoft.asc" | gpg --dearmor > packages.microsoft.gpg
			if [ $? -eq 0 ]; then
				sudo install -D -o root -g root -m 644 packages.microsoft.gpg /etc/apt/keyrings/packages.microsoft.gpg
				sudo sh -c 'echo "deb [arch=amd64,arm64,armhf signed-by=/etc/apt/keyrings/packages.microsoft.gpg] https://packages.microsoft.com/repos/code stable main" > /etc/apt/sources.list.d/vscode.list'
				if [ $? -eq 0 ]; then
					rm -f packages.microsoft.gpg
					sudo apt install apt-transport-https
					sudo apt update && sudo apt install code
					if [ $? -eq 0 ]; then
						code & sleep 5 && sudo killall code && cp -r misc/code/user/* ~/.config/Cod*/User/
						echo -ne "\n\t\t${bold}${red} ~!~!~!~   ${yellow}VS d4Rk-Code done!   ${red}~!~!~!~\n\n"
					else
						echo -ne "\n\t\t${bold}${red}<|[!]|> ${green}Anything bad happend getting VS Code ${red}${standout}:/ ${end}${end}\n" && sleep 1 && exit 1
					fi
				else
					echo -ne "\n\t\t${bold}${red}<|[!]|> ${green}Anything bad happend getting VS Code ${red}${standout}:/ ${end}\n" && sleep 1 && exit 1
				fi
			else
				echo -ne "\n\t\t${bold}${red}<|[!]|> ${green}Anything bad happend getting VS Code ${red}${standout}:/ ${end}\n" && sleep 1 && exit 1
			fi

		elif cat /etc/*release | grep "^ID" | grep -Ei "Fedora" > /dev/null; then
			echo -ne "\n\t${bold}${cyan}<|[+]|> ${blue}Installin VS Code ${end}${cyan}--> \n\n"

			sleep 1 && sudo rpm --import "https://packages.microsoft.com/keys/microsoft.asc" &&
			sudo sh -c 'echo -e "[code]\nname=Visual Studio Code\nbaseurl=https://packages.microsoft.com/yumrepos/vscode\nenabled=1\ngpgcheck=1\ngpgkey=https://packages.microsoft.com/keys/microsoft.asc" > /etc/yum.repos.d/vscode.repo'
			if [ $? -eq 0 ]; then
				dnf check-update && sudo dnf install code
				code & disown; sleep 3 && sudo killall code && cp -r misc/code/user/* ~/.config/Cod*/User/
				echo -ne "\n\t\t${bold}${red} ~!~!~!~   ${yellow}VS Code done!   ${red}~!~!~!~\n\n" && sleep 1
			else
				echo -ne "\n\t\t${bold}${red}<|[!]|> ${green}Anything bad happend getting VS Code ${red}${standout}:/ ${end}${end}\n" && sleep 1 && exit 1
			fi

		else
			echo -ne "\n\t\t${bold}${red}<|[!]|> ${blue} System not ${red}suported ${standout}:/ ${end}${end}\n" && sleep 1 && exit 1
		fi
	fi
	tput civis
}

	# --> downloading & installing Lsd
function lsd(){
	tput cnorm

	which lsd
	if [ $? -eq 0 ]; then
		echo -ne "\t${bold}${cyan}<|[${red}!${cyan}]|> ${end}${yellow}Lsd already in the system ${bold}${cyan}^${bold}${red}.${bold}${cyan}^${end}${cyan}\n\n" && sleep 1
	else

		if cat /etc/*release | grep "^ID_LIKE" | grep -Ei "Debian" > /dev/null; then
			echo -ne "\n\t${bold}${cyan}<|[+]|> ${blue}Downloading lsd ${end}${cyan}--> \n\n"
			sleep 1 && wget "https://github.com/lsd-rs/lsd/releases/download/0.23.1/lsd_0.23.1_amd64.deb" -O lsd.deb && sudo dpkg -i lsd.deb && rm lsd.deb
			if [ $? -eq 0 ]; then
				echo -ne "\n\t\t${bold}${red} ~!~!~!~   ${yellow}Lsd installed!   ${red}~!~!~!~\n\n" && sleep 1
			else
				echo -e "\n\n\t\t${bold}${red}<|[!]|> ${black} Something went wrong getting lsd  ${red}${standout} :/${end}${end}\n\n\n" && sleep 1 && exit 1
			fi

		elif cat /etc/*release | grep "^ID" | grep -Ei "Arch" > /dev/null; then
			sudo pacman -Sy && pacman -S lsd

		elif cat /etc/*release | grep "^ID" | grep -Ei "Fedora" > /dev/null; then
			dnf install lsd

		else
			echo -ne "\n\t\t${bold}${red}<|[!]|> ${blue} System not ${red}suported ${standout}:/ ${end}${end}\n" && sleep 1 && exit 1
		fi
	fi

	tput civis
}

	# --> Complie Nvim & cloning NvChad
function nvim() {
	tput cnorm

	which nvim
	if [ $? -eq 0 ]; then
		echo -ne "\t${bold}${cyan}<|[${red}!${cyan}]|> ${end}${yellow}Nvim already in the system ${bold}${cyan}^${bold}${red}.${bold}${cyan}^${end}${cyan}\n\n" && sleep 1
		echo -ne "\n\n\t${bold}${cyan}<|[+]|> ${end}${blue}Cloning NvChad${cyan} -->\n\n\n" && sleep 1 &&
		rm -rf ~/.config/nvim; rm -rf ~/.local/share/nvim; rm -rf ~/.cache/nvim; sudo rm -rf ~/.config/nvim; sudo rm -rf ~/.local/share/nvim; sudo rm -rf ~/.cache/nvim
		sudo rm -rf /root/.config/nvim; sudo rm -rf /root/.local/share/nvim; sudo rm -rf /root/.cache/nvim; sudo rm -rf /root/.config/nvim; sudo rm -rf /root/.local/share/nvim; sudo rm -rf /root/.cache/nvim
		if [ $? -eq 0 ]; then
			git clone --depth 1 "https://github.com/NvChad/NvChad" ~/.config/nvim  && sudo git clone --depth 1 "https://github.com/NvChad/NvChad" /root/.config/nvim
			if [ $? -eq 0 ]; then
				echo -ne "\n\t\t${bold}${red}~!~!~!~   ${yellow}Nvim NvChad done!${red}   ~!~!~!~ ${standout}${black}:~D${end}\n\n" && sleep 1
			else
				echo -ne "\n\n\t\t${bold}${cyan}<|[!]|> ${red} Something went bad cloning NvChad repo ${red}${standout}:/ ${end}\n\n\n" && sleep 1 && exit 1
			fi
		else
			echo -ne "\n\n\t\t${bold}${cyan}<|[!]|> ${red}  Something went bad removing od folders ${red}${standout}:/ ${end}\n\n\n" && sleep 1 && exit 1
		fi
	else
		mkdir r3p0 && cd r3p0
		echo -ne "\n\n\t${bold}${cyan}<|[+]|> ${end}${blue}Cloning & compiling neovim + cloning NvChad${cyan} -->\n\n\n" && sleep 1 &&
		git clone "https://github.com/neovim/neovim" && cd neovim && make CMAKE_BUILD_TYPE=RelWithDebInfo && sudo make install
		if [ $? -eq 0 ]; then
			rm -rf ~/.config/nvim; rm -rf ~/.local/share/nvim; rm -rf ~/.cache/nvim; sudo rm -rf ~/.config/nvim; sudo rm -rf ~/.local/share/nvim; sudo rm -rf ~/.cache/nvim
			sudo rm -rf /root/.config/nvim; sudo rm -rf /root/.local/share/nvim; sudo rm -rf /root/.cache/nvim; sudo rm -rf /root/.config/nvim; sudo rm -rf /root/.local/share/nvim; sudo rm -rf /root/.cache/nvim
			if [ $? -eq 0 ]; then
				git clone --depth 1 "https://github.com/NvChad/NvChad" ~/.config/nvim  && sudo git clone --depth 1 "https://github.com/NvChad/NvChad" /root/.config/nvim
				if [ $? -eq 0 ]; then
					cd ../../ && rm -rf r3p0
					if [ $? -eq 0 ]; then
						echo -ne "\n\t\t${bold}${red}~!~!~!~   ${yellow}Nvim NvChad done!${red}   ~!~!~!~ ${standout}${black}:~D${end}\n\n" && sleep 1
					else
						echo -ne "\n\n\t\t${bold}${cyan}<|[!]|> ${red} Something went bad removing neovim folder ${red}${standout}:/  ${end}\n\n\n" && sleep 1 && exit 1
					fi
				else
					echo -ne "\n\n\t\t${bold}${cyan}<|[!]|> ${red} Something went bad cloning NvChad repo ${red}${standout}:/ ${end}\n\n\n" && sleep 1 && exit 1
				fi
			else
				echo -ne "\n\n\t\t${bold}${cyan}<|[!]|> ${red}  Something went bad removing od folders ${red}${standout}:/ ${end}\n\n\n" && sleep 1 && exit 1
			fi
		else
			echo -ne "\n\n\t\t${bold}${cyan}<|[!]|> ${red}  Something went bad compiling neovim ${red}${standout}:/ ${end}\n\n\n" && sleep 1 && exit 1
		fi
	fi

	tput civis
}

	# --> Complie Bspwm & Sxhkd
function bspwm(){
	tput cnorm
	
	which bspwm
	if [ $? -eq 0 ]; then
		echo -ne "\t${bold}${cyan}<|[${red}!${cyan}]|> ${end}${yellow}Bspwm already in the system ${bold}${cyan}^${bold}${red}.${bold}${cyan}^${end}${cyan}\n\n" && sleep 1
	else

		mkdir r3p0 &&  cd r3p0
		echo -ne "\n\n\t${bold}${cyan}<|[+]|>${green}$ Cloning bspwm & sxhkd${cyan} -->${end}${cyan}\n\n"
		sleep 1 && git clone "https://github.com/baskerville/bspwm.git" && cd bspwm && make && sudo make install
		if [ $? -eq 0 ]; then
			echo -ne "\n\t\t${bold}${cyan}<|[+]|>${green} Cloning Sxhkd ${cyan}-->\n\n\n" && sleep 1 &&
			git clone "https://github.com/baskerville/sxhkd.git" && cd sxhkd && make && sudo make install
			if [ $? -eq 0 ]; then
				cd ../../../ && rm -rf r3p0
				if [ $? -eq 0 ]; then
					echo -ne "\n\t\t${bold}${red}<|[*]|> ~!~!~!~   ${yellow}Bspwm & sxhkd done!   ${red}~!~!~!~\n\n" && sleep 1
				else
					echo -e "\n\t\t${bold}${red}<|[!]|> ${green} Failing removing folder ${cyan}${standout}:/ ${end}\n" && sleep 1 && exit 1
				fi		else
				echo -e "\n\t\t${bold}${red}<|[!]|> ${green} Failing compiling Sxhkd ${cyan}${standout}:/ ${end}\n" && sleep 1 && exit 1
			fi
		else
			echo -e "\n\t\t${bold}${red}<|[!]|> ${cyan}Failing Compliling bspwm ${red}${standout}:/  ${end}\n" && sleep 1 && exit 1
		fi
	fi

	tput civis
}

	# --> Compile Picom
function picom() {
	tput cnorm

	which picom
	if [ $? -eq 0 ]; then
		echo -ne "\t${bold}${cyan}<|[${red}!${cyan}]|> ${end}${yellow}Picom already in the system ${bold}${cyan}^${bold}${red}.${bold}${cyan}^${end}${cyan}\n\n" && sleep 1
	else

		mkdir r3p0 &&  cd r3p0
		echo -ne "\n\t${bold}${cyan}|[+]|> ${end}${bold}${white}${bold} Cloning & compliling Picom ${end}${cyan}-->${cyan}\n\n\n"
		sleep 1 && git clone "https://github.com/yshui/picom.git" && cd picom
		if [ $? -eq 0 ]; then
			git submodule update --init --recursive && meson setup --buildtype=release . build
			if [ $? -eq 0 ]; then
				ninja -C build && ninja -C build install
				if [ $? -eq 0 ]; then
					cd ../../ && rm -rf r3p0 && echo -ne "\n\t\t${bold}${red}<|[*]|> ~!~!~!~   ${yellow}Picom done!   ${red}~!~!~!~\n\n" && sleep 1
				else
					echo -ne "\n\t\t${bold}${red}<|[!]|> ${green}Something went wrong Compiling Picom ${red}${standout}:/ ${end}\n" && sleep 1 && exit 1
				fi
			else
				echo -ne "\n\t\t${bold}${red}<|[!]|> ${green}Anything bad happend compiling Picom ${red}${standout}:/ ${end}\n" && sleep 1 && exit 1
			fi
		else
			echo -ne "\n\t\t${bold}${red}<|[!]|> ${green}We Cant Download From Github ${red}${standout}:/ ${end}\n" && sleep 1 && exit 1
		fi
	fi

	tput civis
}

	# --> Compile polybar
function polybar() {
	tput cnorm

	which polybar
	if [ $? -eq 0 ]; then
		echo -ne "\t${bold}${cyan}<|[${red}!${cyan}]|> ${end}${yellow}Polybar already in the system ${bold}${cyan}^${bold}${red}.${bold}${cyan}^${end}${cyan}\n\n" && sleep 1
	else

		mkdir r3p0 && cd r3p0
		echo -ne "\n\t${bold}${cyan}|[+]|> ${green}Cloning & compiling Polybar${cyan}--> ${end}${cyan}\n\n\n" && sleep 1
		git clone --recursive "https://github.com/polybar/polybar" && cd polybar && mkdir build && cd build && cmake ..
		if [ $? -eq 0 ]; then
			make -j$(nproc) && sudo make install
			if [ $? -eq 0 ]; then
				cd ../../../ && rm -rf r3p0 &&
				echo -ne "\n\t\t${bold}${red}<|[*]|> ~!~!~!~   ${yellow}Polybar done!   ${red}~!~!~!~\n\n" && sleep 1
			else
				echo -ne "\n\n\t\t${bold}${red}|[!]|> ${cyan}Failing compiling Polybar ${red}${standout}:/  ${end}\n" && sleep 1 && exit 1
			fi
		else
			echo -e "\n\n\t\t${bold}${red}<|[!]|> ${cyan}Failing compiling Polybar ${red}${standout}:/ ${end}\n" && sleep 1 && exit 1
		fi
	fi

	tput civis
}

	# --> Compile polybar
function firefox_esr() {
	tput cnorm

	which firefox_esr
	if [ $? -eq 0 ]; then
		echo -ne "\n\n\t${bold}${cyan}<|[${red}!${cyan}]|> ${end}${yellow}Firefox_esr already in the system ${bold}${cyan}^${bold}${red}.${bold}${cyan}^${end}${cyan}\n\n" && sleep 1
	else

		if cat /etc/*release | grep "^NAME" | grep -Ei "Ubuntu" > /dev/null; then
			echo -ne "\n\t${bold}${cyan}<|[+]|> ${blue}Installing firefox-esr & setting dark theme${cyan}! \n"
			sleep 1 && sudo add-apt-repository ppa:mozillateam/ppa && sudo apt update && sudo apt install firefox-esr
			sleep 1 && firefox-esr & disown; sleep 1 && sudo killall firefox-esr && sleep 1 && cp -r misc/chrome ~/.mozilla/*default-esr*/
		
		elif cat /etc/*release | grep "^NAME" | grep -Ei "Kali|Parrot" > /dev/null; then
			echo -ne "\n\t${bold}${cyan}<|[+]|> ${blue}Installing firefox-esr & setting  theme${cyan}! \n"
			sudo apt install -y firefox-esr && firefox-esr & disown; sleep 1 && sudo killall firefox-esr && sleep 1 && cp -r misc/chrome ~/.mozilla/*default-esr*/

		else
			echo -ne "\n\t\t${bold}${red}<|[!]|> ${blue} System not ${red}suported ${standout}:/ ${end}${end}\n"
		fi
	fi

	tput civis
}

	# --> Nice t@@L! ;D
function htb-Xplorer(){
	tput cnorm

	if [ -d "/opt/h4Ck/htbXplorer-Plus" ]; then
		echo -ne "\t${bold}${cyan}<|[${red}!${cyan}]|> ${end}${yellow}htb-Xplorer already in the system ${bold}${cyan}^${bold}${red}~${bold}${cyan}^${end}${cyan}\n\n" && sleep 1
	else
		echo -ne "\n\t${bold}${cyan}<|[+]|> ${end}${blue}Cloning htbXplorer from github${cyan}--> ${end}${cyan}\n\n"
		sleep 1 && sudo mkdir -p /opt/h4Ck/htbXplorer-Plus
	    if [ $? -eq 0 ]; then
			sudo git clone "https://github.com/4tz1Lu7h/htbXplorer-Plus.git" /opt/h4Ck/htbXplorer-Plus
		    if [ $? -eq 0 ]; then
				sudo chmod +x /opt/h4Ck/htbXplorer-Plus/htbXplorer
				echo -ne "\n\t\t${bold}${purple}~!~!~!~   ${cyan}HtbXplorer-${red}Plus ${cyan}done!   ${purple} ~!~!~!~\n\n"
			else
		        echo -e "\n\n\t\t${bold}${red}<|[!]|> ${cyan}Something went bad cloning the repo ${red}${standout}:/ ${end}\n" && sleep 1 && exit 1
			fi
		else
        	echo -e "\n\n\t\t${bold}${red}<|[!]|> ${cyan}Something went bad creating the folder ${red}${standout}:/ ${end}\n" && sleep 1 && exit 1
		fi
	fi

	tput civis
}

function common_distros() {
	mkdir r3p0s && cd r3p0s
	if [ $? -eq 0 ]; then
		bspwm
		if [ $? -eq 0 ]; then
			picom
			if [ $? -eq 0 ]; then
				polybar	
				if [ $? -eq 0 ]; then
					 code && lsd
					if [ $? -eq 0 ]; then
						htb-Xplorer && firefox_esr
						if [ $? -eq 0 ]; then
							nvim && main 
							if [ $? -eq 0 ]; then
								cd .. && rm -rf r3p0s
							else
								echo -e "\n\n\t\t${bold}${red}<|[!]|> ${cyan}Something went bad with the main package ${red}${standout}:/ ${end}${end}\n" && sleep 1 && exit 1
							fi
						else
							echo -e "\n\n\t\t${bold}${red}<|[!]|> ${cyan}Something went bad with nvim package ${red}${standout}:/ ${end}${end}\n" && sleep 1 && exit 1
						fi
					else
						echo -e "\n\n\t\t${bold}${red}<|[!]|> ${cyan}Something went bad with code package ${red}${standout}:/ ${end}${end}\n" && sleep 1 && exit 1
					fi
				else
					echo -e "\n\n\t\t${bold}${red}<|[!]|> ${cyan}Something went bad with polybar package ${red}${standout}:/ ${end}\n" && sleep 1 && exit 1
				fi
			else
				echo -e "\n\n\t\t${bold}${red}<|[!]|> ${cyan}Something went bad picom the package ${red}${standout}:/ ${end}\n" && sleep 1 && exit 1
			fi
		else
			echo -e "\n\n\t\t${bold}${red}<|[!]|> ${cyan}Something went bad with bspwm package ${red}${standout}:/ ${end}\n" && sleep 1 && exit 1
		fi
	else
		echo -e "\n\n\t\t${bold}${red}<|[!]|> ${cyan}Remove r3p0s folder drom previous tries ${red}${standout}:/ ${end}\n" && sleep 1 && exit 1
	fi
}

